<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <p>タスク：<%= task.content %></p>
          <p>進捗状況：<%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Delete', task, method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>