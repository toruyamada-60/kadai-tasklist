<% if logged_in? %>
  <p>ログインユーザー：<%= current_user.name %>のタスク一覧</p>
  <% if @tasks.any? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <div><%= paginate @tasks %></div>
　<%= link_to '新規タスク作成', new_task_path, class: "btn btn-primary" %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Let's manage your tasks!</h1>
    </div>
  </div>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
<% end %>