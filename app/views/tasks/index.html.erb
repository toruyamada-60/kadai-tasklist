<% if logged_in? %>
  <div class="row">
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
  <div><%= paginate @tasks %></div>
  <%= link_to '新規作成', new_task_path %>
<% else %>
  <div>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>